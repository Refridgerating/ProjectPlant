# Enable NimBLE (lighter BLE stack) and BLE provisioning
CONFIG_BT_ENABLED=y
CONFIG_BT_NIMBLE_ENABLED=y
CONFIG_BT_BLUEDROID_ENABLED=n

# Enable Wi-Fi Provisioning Manager (BLE, Security 1)
CONFIG_WIFI_PROV_BLE_ENABLE=y
CONFIG_WIFI_PROV_SEC1=y

# Enable MQTT client
CONFIG_MQTT_PROTOCOL_311=y

# Reduce log noise
CONFIG_LOG_DEFAULT_LEVEL_INFO=y

